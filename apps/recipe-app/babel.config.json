{
  "presets": ["module:metro-react-native-babel-preset"],
  "plugins": [
    "nativewind/babel",
    [
      "module-resolver",
      {
        "root": ["."],
        "alias": {
          "@assets": "./assets",
          "@pages": "./src/pages",
          "@features": "./src/features",
          "@entities": "./src/entities"
        }
      }
    ],
    "react-native-reanimated/plugin"
  ]
}
